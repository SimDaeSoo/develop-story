{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "category": {
      "model": "category",
      "via": "articles"
    },
    "thumbnail": {
      "type": "string"
    },
    "content": {
      "type": "text",
      "required": true
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articles"
    },
    "comments": {
      "via": "article",
      "collection": "comment"
    }
  }
}
